{
  "platform": "OpenGINXplore",
  "name": "Government Budget Data Audit",
  "description": "Validates government budget expenditure datasets including President, Prime Minister, and Ministry capital and recurrent expenditures",
  "app_url": "https://openginxplore.opendata.lk/data?startDate=2020-01-01&endDate=2025-12-31",
  "years": [2021, 2022, 2023, 2024],
  "datasets": [
    {
      "name": "President Capital Expenditure",
      "description": "Capital expenditure allocations under President's office",
      "category": "Budget",
      "github_repo": "LDFLK/datasets",
      "file_path": "data/statistics/{year}/datasets/President Capital Expenditure/data.json",
      "branch": "main",
      "data_url": "https://raw.githubusercontent.com/LDFLK/datasets/main/data/statistics/{year}/datasets/President%20Capital%20Expenditure/data.json",
      "data_path": "rows",
      "expected_columns": ["Institution", "Amount (Rs.Million)"],
      "available_years": [2021, 2022, 2023, 2024],
      "validations": [
        {
          "name": "minimum_rows",
          "type": "min_rows",
          "value": 1
        },
        {
          "name": "institution_not_empty",
          "type": "value_not_empty",
          "column": "Institution"
        }
      ],
      "navigation": {
        "tree_path": ["Budget", "President Budget", "President Capital Expenditure"],
        "steps": [
          {
            "type": "click",
            "selector": "//*[text()='Budget']",
            "by": "xpath",
            "description": "Click Budget category"
          },
          {
            "type": "click",
            "selector": "//*[text()='President Budget']",
            "by": "xpath",
            "description": "Click President Budget"
          },
          {
            "type": "click",
            "selector": "//*[contains(text(), 'President Capital Expenditure')]",
            "by": "xpath",
            "description": "Click President Capital Expenditure"
          },
          {
            "type": "wait",
            "selector": "//table",
            "by": "xpath",
            "timeout": 15,
            "description": "Wait for data table to load"
          }
        ]
      },
      "selectors": {
        "data_table": {
          "selector": "//table",
          "by": "xpath"
        },
        "table_rows": {
          "selector": "//table//tr",
          "by": "xpath",
          "extract_list": true
        }
      }
    },
